{
  "name": "nexuspress",
  "version": "0.1.0",
  "description": "NexusPress - AI-Powered WordPress Platform built with Next.js",
  "author": "Chetan Dhargalkar",
  "repository": {
    "type": "git",
    "url": "https://github.com/chetan3460/nexuspress.git"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "sync-acf-blocks": "node scripts/sync-acf-blocks.js",
    "fetch-acf": "node scripts/fetch-acf-from-db.js && npm run sync-acf-blocks",
    "import-acf": "node scripts/import-acf-export.js && npm run sync-acf-blocks",
    "acf-sync": "npm run import-acf",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "framer-motion": "^12.23.25",
    "gsap": "^3.13.0",
    "next": "16.0.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.68.0",
    "react-international-phone": "^4.6.1",
    "swiper": "^12.0.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mysql2": "^3.16.0",
    "next-pwa": "^5.6.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
